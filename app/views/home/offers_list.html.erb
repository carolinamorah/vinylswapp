
<br>
<div class="container border border-warning border-2 bg-light">
 <h1 class="text-center mt-4"> Swaps List</h1>
    <br>
    <div class="table-responsive">
      <table class="table table-striped table-hover text-center">
        <thead>
          <tr>
            <th>OFFERED VINYL</th>
            <th>CHOSEN VINYL</th>
            <th>SENDER</th>
            <th>OWNER</th>
            <th>STATE</th>
            <th>DATE</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @offers_list.each do |offer| %>
            <tr>
              <td><%= offer.offeredvinyl.title %></td>
              <td><%= offer.receivervinyl.title %></td>
              <td><%= User.find(offer.user_id).collectionist_name%></td>
              <td><%= User.find(offer.owner_id).collectionist_name%></td>
              <td><%= offer.offer_state %></td>
              <td><%= offer.created_at.strftime("%Y-%m-%d") %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
</div>

