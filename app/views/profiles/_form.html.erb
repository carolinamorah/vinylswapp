<%= form_with(model: profile, local: true) do |form| %>
  <% if profile.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(profile.errors.count, "error") %> prohibited this profile from being saved:</h2>

      <ul>
      <% profile.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="container">
    <div class="field">
      <%= form.label :avatar %><br/>
      <%= form.file_field :avatar %>
    </div>

    <div class="field">
      <%= form.hidden_field :user_id%>
    </div>

    <div class="field">
      <%= form.label :bio %><br/>
      <%= form.text_area :bio %>
    </div>

    <div class="field">
      <%= form.label :latitude %><br/>
      <%= form.number_field :latitude %>
    </div>

    <div class="field">
      <%= form.label :longitude %><br/>
      <%= form.number_field :longitude %>
    </div>

    <div class="field">
      <%= form.label :state %><br/>
      <%= form.text_field :state %>
    </div>

    <div class="field">
      <%= form.label :city %><br/>
      <%= form.text_field :city %>
    </div>

    <div class="actions">
      <%= form.submit class: "btn btn-outline-dark btn-sm"%>
    </div>
  </div>
<% end %>
