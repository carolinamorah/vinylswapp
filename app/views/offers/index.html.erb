<p id="notice"><%= notice %></p>

<h1>Offers</h1>

<table>
  <thead>
    <tr>
      <th>Offered vinyl</th>
      <th>Chosen Vinyl</th>
      <th>Owner</th>
      <th>State</th>
      <th>End date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @offers.each do |offer| %>
      <tr>
        <td><%= offer.offeredvinyl.title %></td>
        <td><%= offer.receivervinyl.title %></td>
        <td><%= offer.user.collectionist_name%></td>
        <td><%= offer.offer_state %></td>
        <td><%= offer.end_date %></td>
        <td><%= link_to 'Show', vinyl_offer_path(@vinyl.id, offer.id)%></td>
        <td><%= link_to 'Edit', edit_vinyl_offer_path(@vinyl.id, offer.id) %></td>
        <td><%= button_to 'Destroy', destroy_path(@vinyl.id, offer.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Offer', new_vinyl_offer_path(@vinyl) %>
